@model MvcTemplate.Web.ViewModels.Account.ForgotPasswordViewModel
@{
    this.ViewBag.Title = "Forgot your password?";
}

<h2>@(this.ViewBag.Title).</h2>

@using (this.Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @(this.Html.AntiForgeryToken())
    <h4>Enter your email.</h4>
    <hr/>
    @(this.Html.ValidationSummary(string.Empty, new { @class = "text-danger" }))
    <div class="form-group">
        @(this.Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" }))
        <div class="col-md-10">
            @(this.Html.TextBoxFor(m => m.Email, new { @class = "form-control" }))
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Email Link"/>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
