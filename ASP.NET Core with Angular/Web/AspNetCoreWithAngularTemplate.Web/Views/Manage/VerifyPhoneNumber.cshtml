@using AspNetCoreWithAngularTemplate.Web.ViewModels.Manage
@model AspNetCoreWithAngularTemplate.Web.ViewModels.Manage.VerifyPhoneNumberViewModel
@{
    this.ViewData["Title"] = "Verify Phone Number";
}

<h2>@this.ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="VerifyPhoneNumber" asp-route-returnurl="@this.ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <input asp-for="PhoneNumber" type="hidden" />
    <h4>Add a phone number.</h4>
    <h5>@this.ViewData["Status"]</h5>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Code" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await this.Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
